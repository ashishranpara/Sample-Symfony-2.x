{% extends '::base.html.twig' %} 
{% block title %}
    Show User
{% endblock %}
 
{% block content %}
    
    <!--  start page-heading -->
	<div id="page-heading">
		<h1>User details </h1>
	</div>
	<!-- end page-heading -->

	<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
		{% include "AdminBundle::tableStart.html.twig" %}
		<tr>
			<td id="tbl-border-left"></td>
			<td valign="top">
			<!--  start content-table-inner ...................................................................... START -->
			<div id="content-table-inner">
			
				<!--  start table-content  -->
				<div id="table-content">
					<!--<h2>Sub Heading </h2>
					<h3>Local Heading</h3>-->
					<table class="" width="100%" border="1">
					        <tr>
					            <th width="30%">Id</th>
					            <td width="70%">{{ entity.id }}</td>
					        </tr>
					        <tr>
					            <th>Username</th>
					            <td>{{ entity.username }}</td>
					        </tr>
					        <tr>
					            <th>Address</th>
					            <td>{{ entity.address1 }} {{ entity.address2 }}</td>
					        </tr>
					        <tr>
					            <th>Email</th>
					            <td>{{ entity.email }}</td>
					        </tr>
					        <tr>
					            <th>Country</th>
					            <td>{{ entity.country }}</td>
					        </tr>
					        <tr>
					            <th>State</th>
					            <td>{{ entity.state }}</td>
					        </tr>
					         <tr>
					            <th>City</th>
					            <td>{{ entity.city }}</td>
					        </tr>
					        <tr>
					            <th>Role</th>
					             <td>{{ entity.role.values[0] is defined ?  entity.role.values[0] : '' }}</td>
					        </tr>
					        <tr>
					        	<td>
					        		<a href="{{ path('user') }}">
            							Back to the list
        							</a>
					        	</td>
					        	<td></td>
					        </tr>
					</table>
					
				</div>
				<!--  end table-content  -->
		
				<div class="clear"></div>
			 
			</div>
			<!--  end content-table-inner ............................................END  -->
			</td>
			<td id="tbl-border-right"></td>
		</tr>
		{% include "AdminBundle::tableEnd.html.twig" %}
	</table>
	<div class="clear">&nbsp;</div>
    
{% endblock %}