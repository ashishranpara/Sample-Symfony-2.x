{% extends '::base.html.twig' %}{% block title %}
    Edit User
{% endblock %}
{% block content %}
<div id="page-heading"><h1>Edit User</h1></div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
	{% include "AdminBundle::tableStart.html.twig" %}
	<tr>
		<td id="tbl-border-left"></td>
		<td valign="top">
			<!--  start content-table-inner -->
			<div id="content-table-inner">
				<table border="0" width="100%" cellpadding="0" cellspacing="0">
					<tr valign="top">
						<td>
							<!--  start step-holder -->
							<!--  end step-holder -->
							<!-- start id-form -->
							<form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="disable">
							{{ form_errors(edit_form) }}
							<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
								<tr>
									<th valign="top">{{ form_label(edit_form.username) }}</th>
									<td>{{ form_widget(edit_form.username) }}</td>
									<td>
									{% if form_errors(edit_form.username) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.username) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.email) }}</th>
									<td>{{ form_widget(edit_form.email) }}</td>
									<td>
									{% if form_errors(edit_form.email) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.email) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.name) }}</th>
									<td>{{ form_widget(edit_form.name) }}</td>
									<td>
									{% if form_errors(edit_form.name) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.name) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.address1) }}</th>
									<td>{{ form_widget(edit_form.address1) }}</td>
									<td>
									{% if form_errors(edit_form.address1) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.address1) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.address2) }}</th>
									<td>{{ form_widget(edit_form.address2) }}</td>
									<td>
									{% if form_errors(edit_form.address2) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.address2) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.country) }}</th>
									<td>{{ form_widget(edit_form.country) }}</td>
									<td>
									{% if form_errors(edit_form.country) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.country) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.state) }}</th>
									<td>{{ form_widget(edit_form.state) }}</td>
									<td>
									{% if form_errors(edit_form.state) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.state) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.city) }}</th>
									<td>{{ form_widget(edit_form.city) }}</td>
									<td>
									{% if form_errors(edit_form.city) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.city) }}</div>
									{% endif %}
									</td>
								</tr>
								
								{% if app.session.get('role_name') == 'ROLE_STAFF' %}
								<tr>
									<th valign="top">{{ form_label(edit_form.clientPayment.paymentMode) }}</th>
									<td>{{ form_widget(edit_form.clientPayment.paymentMode) }}</td>
									<td>
									{% if form_errors(edit_form.clientPayment.paymentMode) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.clientPayment.paymentMode) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.clientPayment.amountReceived) }}</th>
									<td>{{ form_widget(edit_form.clientPayment.amountReceived) }}</td>
									<td>
									{% if form_errors(edit_form.clientPayment.amountReceived) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.clientPayment.amountReceived) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.clientPayment.dueAmount) }}</th>
									<td>{{ form_widget(edit_form.clientPayment.dueAmount) }}</td>
									<td>
									{% if form_errors(edit_form.clientPayment.dueAmount) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.clientPayment.dueAmount) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(edit_form.clientPayment.totalAmount) }}</th>
									<td>{{ form_widget(edit_form.clientPayment.totalAmount) }}</td>
									<td>
									{% if form_errors(edit_form.clientPayment.totalAmount) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(edit_form.clientPayment.totalAmount) }}</div>
									{% endif %}
									</td>
								</tr>
								{% endif %}
								<tr>
									<th>&nbsp;</th>
									<td valign="top">
										{{ form_rest(edit_form) }}
        								<button type="submit" class="form-submit">Edit</button>
									</td>
									<td></td>
								</tr>
							</table>
							</form>
							<!-- end id-form  -->
						</td>
						<td>
						</td>
					</tr>
				</table>
				<div class="clear"></div>
			</div>
			<!--  end content-table-inner  -->
		</td>
		<td id="tbl-border-right"></td>
	</tr>
	{% include "AdminBundle::tableEnd.html.twig" %}
</table>
<div class="clear">&nbsp;</div>
{% endblock %}