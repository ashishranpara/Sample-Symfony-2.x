{% extends '::base.html.twig' %}{% block title %}
    Change password
{% endblock %}
{% block content %}
<div id="page-heading"><h1>Change password</h1></div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
	{% include "AdminBundle::tableStart.html.twig" %}
	<tr>
		<td id="tbl-border-left"></td>
		<td valign="top">
			<!--  start content-table-inner -->
			<div id="content-table-inner">
				<table border="0" width="100%" cellpadding="0" cellspacing="0">
					<tr valign="top">
						<td>
							<!--  start step-holder -->
							<!--  end step-holder -->
							<!-- start id-form -->
							<form action="{{ path('changePassword') }}" method="post" name="frmchangepassword" id="frmchangepassword"  novalidate="disable">
							<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
								<tr>
									<th valign="top">{{ form_label(form.password.Password) }}</th>
									<td>{{ form_widget(form.password.Password) }}</td>
									<td>
									{% if form_errors(form.password) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(form.password) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th valign="top">{{ form_label(form.password.Confirm_Password) }}</th>
									<td>{{ form_widget(form.password.Confirm_Password) }}</td>
									<td>
									{% if form_errors(form.password.Confirm_Password) %}
									<div class="error-left"></div>
									<div class="error-inner">{{ form_errors(form.password.Confirm_Password) }}</div>
									{% endif %}
									</td>
								</tr>
								<tr>
									<th>&nbsp;</th>
									<td valign="top">
										{{ form_rest(form) }}
        								<button type="submit" class="form-submit">Create</button>
									</td>
									<td></td>
								</tr>
							</table>
							</form>
							<!-- end id-form  -->
						</td>
						<td>
						</td>
					</tr>
				</table>
				<div class="clear"></div>
			</div>
			<!--  end content-table-inner  -->
		</td>
		<td id="tbl-border-right"></td>
	</tr>
	{% include "AdminBundle::tableEnd.html.twig" %}
</table>
<div class="clear">&nbsp;</div>
{% endblock %}