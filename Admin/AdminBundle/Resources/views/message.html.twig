<!--  start message-red -->
{% if app.session.hasFlash('error') %}
<div id="message-red">
	<table border="0" width="100%" cellpadding="0" cellspacing="0">
	<tr>
		<td class="red-left">{{ app.session.flash('error') }}</td>
		<td class="red-right"><a class="close-red"><img src="{{ asset('images/table/icon_close_red.gif') }}"   alt="" /></a></td>
	</tr>
	</table>
</div>
{% endif %}
<!--  end message-red -->
<!--  start message-green -->
{% if app.session.hasFlash('success') %}

<div id="message-green">
	<table border="0" width="100%" cellpadding="0" cellspacing="0">
	<tr>
		<td class="green-left">{{ app.session.flash('success') }}</td>
		<td class="green-right"><a class="close-green"><img src="{{ asset('images/table/icon_close_green.gif') }}"   alt="" /></a></td>
	</tr>
	</table>
</div>
{% endif %}
